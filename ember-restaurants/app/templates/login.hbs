<section id="login">
    <div class="container">
    	<div class="row">
    	    <div class="col-xs-12">
        	    <div class="form-wrap">
                    <div class = "row login-head">
                        <div class = "col-md-6 col-sm-6">
                            <h1>Login</h1>
                        </div>
                        <div class = "col-md-6 col-sm-6 create-account">
                           {{#link-to 'index'}}Create Account{{/link-to}}
                        </div>
                        </div>
                    <form {{action 'login' on='submit'}} id="login-form" autocomplete="off">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            {{input id='email' class = "form-control" placeholder='Email' value=email}}
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                            {{input id='password' class = "form-control" placeholder='Password' type='password' value=password}}
                        </div>
                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Login">
                          {{#if errorMessage}}
                            <p>{{errorMessage}}</p>
                            {{/if}}
                    </form>
        	    </div>
    		</div> <!-- /.col-xs-12 -->
    	</div> <!-- /.row -->
    </div> <!-- /.container -->
</section>
