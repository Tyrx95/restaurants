<form role="search" class="filter-box not-landing" {{action (action actionHandler) on='submit'}}>
	<div class="row row-no-padding">
		<div class="col-md-3 option">
			{{
				ember-selectize
				content=personChoices
				value=reservation.people
				placeholder="1 people"
				class="filter-selectize"
			}}
		</div>
		<div class="col-md-3 option">
			{{bootstrap-datepicker autoclose=true todayHighlight=true format="M d, yyyy" startDate=minDate endDate=maxDate value=reservation.date}}
		</div>
		<div class="col-md-3 option">
			{{
				ember-selectize
				content=timeChoices
				value=reservation.hour
				placeholder="Time"
				class="filter-selectize"
			}}
		</div>
		<div class="col-md-3 option">
			<button class="btn btn-primary" type="submit">Find a table</button>
		</div>
	</div>
</form>
