{{navbar-admin}}
{{navbar-admin-res linkToValue='edit'}}

<div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12 col-centered">
          <div class="row">
              <div class="col-md-6">
                  <div class="card" style="margin-left:10px">
                      <div class="content">
                      	<table>
                      		<tr>
	                      		<th>Sitting Places</th>
	                     		<th style="width: 10%;">Options</th>
							</tr>
							 {{#each edit.tables as |table|}}
								<tr>
								<td> {{table.sittingPlaces}} people </td>
								<td>
                  <a href="#" {{ action "deleteTable" table}}> <i class="fa fa-times" aria-hidden="true"></i> </a>
                </td>
								</tr>
							{{/each}}
                      	</table>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="card">
                      <div class="content">
                        	<button class="btn btn-primary" style="float: right;" {{action "addTable"}}><i class="fa fa-plus"></i> &nbsp;Add table</button>
                          <div class="row menuItemsRow">
                  					  {{#each edit.addTableQueue as |table index|}}
                  					    <div class="col-md-8">
                  					      <form class="menu-item">
                  							<div class="left">
                  								<p>
                  								<span></span>.
                  								</p>
                  							</div>

                  							<div class="small-right">
                  								<p>
                  								<br>
                  								<a href="#"{{action "removeTable" table}}><i class="fa fa-trash" aria-hidden="true"></i></a><br><br>
                  								</p>
                  							</div>
                  							<div class="form-group right">
                  								{{ember-selectize
                  									content=personChoices
                  									selection=table.personChoice
                  									placeholder= table.personChoice }}
                  									{{input class="form-control menu-item-price" placeholder="Amount" value=table.amount}}
                  							</div>
                  						</form>
                  						</div>
                  					  {{/each}}
                  			  	</div>
                      </div>
                  </div>
              </div>
          </div>
       </div>

   </div>
