
{{navbar-admin}}

{{outlet}}

<div class="row">
  <div class="col-md-12">
    <div class="card padded">
      <div class="content" style="margin-top: 0px;">
        <form class="admin-restaurant-form">
          <div class="row">
            <div class="col-md-6">

              <div class="form-group">
                <p><b>First Name</b></p>
                {{input type="text" value=model.user.firstName class="form-control"}}
              </div>

              <div class="form-group">
                <p><b>Email</b></p>
                {{input type="text" value=model.user.email class="form-control"}}
              </div>

              <div class="form-group">
                <p><b>Country</b></p>
                {{input type="text" value=model.user.country class="form-control"}}
              </div>
              
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <p><b>Last Name</b></p>
                {{input type="text" value=model.user.lastName class="form-control"}}
              </div>
              <div class="form-group">
                <p><b>Phone Number</b></p>
                {{input type="text" value=model.user.phone class="form-control"}}
              </div>
              <div class="form-group">
                <p><b>City</b></p>
                {{input type="text" value=model.user.city class="form-control"}}
              </div>
            </div>

          </div>
          <div class="row">
            <center>
              <button class="btn btn-primary" id="add-user-button" {{ action "editUser" }}>Finish</button><br><br><br>
            </center>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
